<Window x:Class="DAR.OverlayTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAR"
        mc:Ignorable="d"
        Title="OverlayTextWindow" Height="450" Width="800" WindowStyle="None" Topmost="True" AllowsTransparency="True" >
    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <ItemsControl Name="icTriggers" ItemsSource="{Binding UpdateSourceTrigger=PropertyChanged}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,5">
                        <TextBlock FontSize="40" Text="{Binding Displaytext}"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</Window>
